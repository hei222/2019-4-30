    //                            '</div>';
    //        var $alert = $(msgHtml);
    //        $alert.modal("toggle");
    //        //$("body").append($alert);
    //        //setTimeout(function () {
    //        //    $alert.alert('close');
    //        //}, 1000);
    //}
    comfirm: function (message, callback) {
        var winW = $("body").width(),
            winH = $("body").height();
        message = message || '';

        var $msgObj = $('<div class="propup-comfirm"></div>'),
            $mask = $('<div></div>'),
            msgHtml = '<div class="header">' +
                      '<span>温馨提示</span>' +
                      '<span class="close">×</span></div>' +
                      '<div class="content">' +
                      '<p>' + message + '</p>' +
                      '<div class="btn-group">' +
                      '<button class="ok">确定</button><button class="close">取消</button>' +
                      '</div></div>';

        $msgObj.html(msgHtml);
        $mask.css({
            "width": winW,
            "height": winH,
            "position": "absolute",
            "background-color": "rgba(0,0,0,0.3)",
            "z-index": 1999,
            "left": 0,
            "top": 0
        })
        $("body").append($msgObj).append($mask);

        $msgObj.find(".close").click(function () {
            $msgObj.remove();
            $mask.remove();
        })

        $msgObj.find(".ok").click(function () {
            $msgObj.remove();
            $mask.remove();
            !!callback && callback();
        })
    }
};
